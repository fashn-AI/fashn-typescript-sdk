{
  "dxt_version": "0.2",
  "name": "fashn-mcp",
  "version": "0.9.0",
  "description": "The official MCP Server for the Fashn API",
  "author": {
    "name": "Fashn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fashn-AI/fashn-typescript-sdk.git"
  },
  "homepage": "https://github.com/fashn-AI/fashn-typescript-sdk/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.fashn.ai",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "FASHN_API_KEY": "${user_config.FASHN_API_KEY}"
      }
    }
  },
  "user_config": {
    "FASHN_API_KEY": {
      "title": "api_key",
      "description": "API key for API access (format: fa-UNIQUE_ID-HASH)",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
